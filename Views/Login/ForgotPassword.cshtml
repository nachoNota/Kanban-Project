<section class="d-flex justify-content-center my-4">
	<div class="card p-4 shadow" style="width: 100%; max-width: 400px;">
		<h3 class="text-center">Recuperar contraseña</h3>
		<p class="text-center text-muted mb-4">Ingresa tu correo y te enviaremos un link al mismo para restablecer tu contraseña.</p>

		<form method="post" asp-action="ForgotPassword">
			
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input type="email" class="form-control" name="email" required>
			</div>

			<button type="submit" class="btn btn-primary w-100 mover mover-hover4">Recuperar</button>
		</form>
	</div>
</section>

@if (TempData["Mensaje"] != null)
{
	<div class="toast-container position-fixed top-0 end-0 p-3">
		<div class="toast show align-items-center text-bg-primary" role="alert" aria-live="assertive" aria-atomic="true">
			<div class="d-flex">
				<div class="toast-body">
					@TempData["Mensaje"]
				</div>
				<button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
			</div>
		</div>
	</div>
}