@inject tl2_proyecto_2024_nachoNota.Services.IAuthenticationService AuthService

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tl2_proyecto_2024_nachoNota</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_proyecto_2024_nachoNota.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark px-3">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand text-light fw-bold" asp-action="Index" asp-controller="Login">Proyecto</a>
                @if(AuthService.IsAuthenticated()){
                    <ul class="navbar-nav ms-3">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-action="ListarPropios" asp-controller="Tablero" asp-route-idUsuario="@Context.Session.GetInt32("IdUser")">
                                Mis tableros
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-action="ListarConTareasAsignadas" asp-controller="Tablero" asp-route-idUsuario="@Context.Session.GetInt32("IdUser")">Tareas asignadas</a>
                        </li>
                    </ul>
                }
                <!-- Botón de menú en pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Contenido colapsable (se mantiene a la derecha) -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="ms-auto d-flex align-items-center">
                        @if (!AuthService.IsAuthenticated())
                        {
                            <a class="btn btn-outline-success me-3" asp-action="Index" asp-controller="Login">Iniciar sesión</a>
                            <div class="vr text-light"></div>
                            <a class="btn btn-outline-primary ms-3" asp-action="Registrar" asp-controller="Usuario">Registrarse</a>
                        }
                        else
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person"></i> @Context.Session.GetString("User")
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-action="Modificar" asp-controller="Usuario" asp-route-idUsuario="@Context.Session.GetInt32("IdUser")">
                                            <i class="bi bi-gear me-2"></i> Ajustes
                                        </a>
                                    </li>
                                    <li><a class="dropdown-item" asp-action="Logout" asp-controller="Login">Cerrar sesión</a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </nav>



    </header>


        <main role="main" style="background-color: @(ViewData["BackgroundColor"] ?? "#ffffff");">
            @RenderBody()
        </main>


    <footer class="border-top footer text-muted p-3" >
        <div class="container text-light">
            <div class="d-flex justify-content-between align-items-center">
                <span>
                    &copy; 2024 - tl2_proyecto_2024_nachoNota -
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </span>
                <div>
                    <ul class="list-unstyled d-flex m-0">
                        <li class="me-3 mover mover-hover4"><a href="https://www.instagram.com/nachonota04/" class="text-light"><i class="bi bi-instagram fs-4"></i></a></li>
                        <li class="me-3 mover mover-hover4"><a href="" class="text-light"><i class="bi bi-twitter-x fs-4"></i></a></li>
                        <li class="mover mover-hover4"><a href="" class="text-light"><i class="bi bi-whatsapp fs-4"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

