@model tl2_proyecto_2024_nachoNota.ViewModels.TareaVM.ListarTareasDeTableroViewModel

@{
    ViewData["BackgroundColor"] = Model.Tablero.Color;
}

@{bool EsPropietarioTablero = Model.Tablero.IdUsuario == Context.Session.GetInt32("IdUser");}

<div class="container-md">
    <h4 class="py-3 borde-letras">@Model.Tablero.Titulo</h4>

    <div class="row row-cols-1 row-cols-md-5 g-4">
        @foreach (EstadoTarea estado in Enum.GetValues(typeof(EstadoTarea)))
        {
            var tareasPorEstado = Model.Tareas.Where(t => t.Estado == estado);

            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">@estado</h5>

                        <div class="list-group">
                            @foreach (var tarea in tareasPorEstado)
                            {
                                string tachar = estado == EstadoTarea.Done ? "text-decoration-line-through" : "";

                                <a asp-action="VerDetalles" asp-route-idTarea="@tarea.IdTarea" asp-route-idPropietarioTablero="@Model.Tablero.IdUsuario" type="button"
                                   style="background-color:@tarea.Color;"
                                   class="list-group-item list-group-item-action mover mover-hover4 d-flex justify-content-between align-items-center">
                                    <span class="@tachar borde-letras">@tarea.Titulo</span>

                                    @if (tarea.IdUsuario == Context.Session.GetInt32("IdUser"))
                                    {
                                        <i class="bi bi-person borde-letras" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                           data-bs-title="Eres propietario de esta tarea"></i>
                                    }

                                </a>
                            }
                        </div>
                        
                        @if(estado == EstadoTarea.Ideas && EsPropietarioTablero){
                            <div class="mt-3">
                                <a asp-action="Crear" asp-route-idTablero="@Model.Tablero.Id"
                                   class="btn w-100 btn-outline-light-secondary text-black border-0">
                                    <i class="bi bi-plus-circle"></i> Crear tarea
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@if (TempData["Mensaje"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div class="toast show bg-success" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Éxito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-light">
                @TempData["Mensaje"]
            </div>
        </div>
    </div>
}