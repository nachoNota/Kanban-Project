@model tl2_proyecto_2024_nachoNota.ViewModels.DetalleTareaViewModel

@{
    ViewData["Title"] = "Ver Detalles de Tarea";
}
<div class="container-md">
    <h2 class="py-3 borde-letras">@Model.Titulo</h2>

    <div class="card shadow-sm" style="max-width:30rem;">
        <div class="card-body d-flex flex-column gap-4">

            <div class="d-flex">
                <h5 class="card-title me-2">Título:</h5>
                <p class="card-text mb-0">@Model.Titulo</p>
            </div>

            <div class="d-flex">
                <h5 class="card-title me-2">Descripción:</h5>
                <p class="card-text mb-0">
                    @(string.IsNullOrEmpty(Model.Descripcion) ? "No hay descripción disponible." : Model.Descripcion)
                </p>
            </div>

            <div class="d-flex align-items-center">
                <h5 class="card-title me-2">Color:</h5>
                <div style="width: 50px; height: 30px; background-color:@Model.Color; border: 1px solid #000;"></div>
            </div>

            <div class="d-flex">
                <h5 class="card-title me-2">Ultima Modificación:</h5>
                <p class="card-text mb-0">@Model.FechaModificacion.ToString("dd/MM/yyyy HH:mm")</p>
            </div>

            <div class="d-flex">
                <h5 class="card-title me-2">Estado Actual:</h5>
                <p class="card-text mb-0">@Model.Estado</p>

            </div>

            <!-- Botón para volver -->
            <div class="mt-3">
                <a asp-action="Listar" asp-route-idTablero="@Model.IdTablero" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver a la lista de tareas
                </a>
            </div>
        </div>
    </div>
</div>