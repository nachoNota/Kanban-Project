@using tl2_proyecto_2024_nachoNota.ViewModels
@model tl2_proyecto_2024_nachoNota.ViewModels.DetalleTareaViewModel

@{
    ViewData["Title"] = "Ver Detalles de Tarea";
}

@{
    bool esPropietarioTablero = Model.IdPropietarioTablero == Context.Session.GetInt32("IdUser");
}

<div class="container-md py-4">
    <h2 class="mb-3 borde-letras">@Model.Titulo</h2>

    <article class="card shadow-sm" style="max-width:30rem;">
        <div class="card-body d-flex flex-column gap-3">

            <header class="d-flex align-items-center justify-content-between">
                <div class="d-flex">
                    <h5 class="card-title me-2">Propietario:</h5>
                    <p class="card-text mb-0">@Model.NombreUsuario</p>
                </div>

                @if (esPropietarioTablero)
                {
                    <button type="button" class="btn btn-outline-secondary ms-4">Cambiar propietario</button>
                }
            </header>

            <section class="d-flex">
                <h5 class="card-title me-2">Descripción:</h5>
                <p class="card-text mb-0">
                    @(string.IsNullOrEmpty(Model.Descripcion) ? "No hay descripción disponible." : Model.Descripcion)
                </p>
            </section>

            <section class="d-flex align-items-center">
                <h5 class="card-title me-2">Color:</h5>
                <span style="width: 50px; height: 30px; background-color:@Model.Color; border: 1px solid #000;"></span>
            </section>

            <section class="d-flex">
                <h5 class="card-title me-2">Última Modificación:</h5>
                <p class="card-text mb-0">@Model.FechaModificacion.ToString("dd/MM/yyyy HH:mm")</p>
            </section>

            <section class="d-flex justify-content-between">
                <div class="d-flex">
                    <h5 class="card-title me-2">Estado Actual:</h5>
                    <p class="card-text mb-0">@Model.Estado</p>
                </div>
                @if (Context.Session.GetInt32("IdUser") == Model.IdUsuario)
                {
                    <aside class="btn-group dropend ms-4">
                        <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            Reasignar
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            @foreach (EstadoTarea estado in Enum.GetValues(typeof(EstadoTarea)))
                            {
                                <li>
                                    <a class="dropdown-item" asp-action="CambiarEstado" asp-route-idTarea="@Model.Id" asp-route-estado="@estado">
                                        @estado
                                    </a>
                                </li>
                            }
                        </ul>
                    </aside>
                }
            </section>

            <footer class="d-flex bg-white">
                <div class="me-auto p-2">
                    <a asp-action="Listar" asp-route-idTablero="@Model.IdTablero" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver a la lista de tareas
                    </a>
                </div>

                @if (esPropietarioTablero)
                {
                    <div class="p-2">
                        <button class="btn btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#modalEliminar-@Model.Id">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <div class="p-2">
                        <button asp-action="Modificar" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i>
                        </button>
                    </div>
                }
            </footer>
        </div>
    </article>
</div>

@await Html.PartialAsync("Eliminar", new EliminarTareaViewModel(Model.Id, Model.IdTablero));