
@model List<tl2_proyecto_2024_nachoNota.ViewModels.TableroVM.ListarTablerosPropiosViewModel>

<div class="container">
<h1 class="mt-3">Mis Tableros</h1>
<div class="my-4">
    <div class="row g-4">
        @foreach (var tablero in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card mover mover-hover8">
                    <a asp-action="Listar" asp-controller="Tarea" asp-route-idTablero="@tablero.IdTablero" class="text-decoration-none">
                        <div class="card-body borde-letras" style="background-color: @tablero.Color;">
                            <h5 class="card-title">@tablero.Titulo</h5>
                        </div>
                    </a>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <!-- Contenedor para los primeros dos botones alineados a la izquierda -->
                        <div>
                            <!-- boton eliminar -->
                            <button class="btn btn-outline-danger"
                                    data-bs-toggle="modal"
                                        data-bs-target="#modalEliminar-@tablero.IdTablero">
                                <i class="bi bi-trash"></i>
                            </button>

                            <!-- boton modificar -->
                            <button class="btn btn-outline-primary ms-2"
                                    data-bs-toggle="offcanvas"
                                        data-bs-target="#offcanvasRight-@tablero.IdTablero"
                                    aria-controls="offcanvasRight">
                                <i class="bi bi-arrow-repeat"></i>
                            </button>
                        </div>

                    </div>

                </div>
            </div>


            @await Html.PartialAsync("Eliminar", tablero.IdTablero)
            @await Html.PartialAsync("Modificar", new tl2_proyecto_2024_nachoNota.ViewModels.TableroVM.ModificarTableroViewModel(tablero))
        }

        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center mover mover-hover8 cursor dashed"
                 data-bs-toggle="offcanvas"
                 data-bs-target="#offcanvasCrear"
                 aria-controls="offcanvasCrear">
                <div class="card-body">
                    <p>¿Nuevas ideas en mente?</p>
                    <i class="bi bi-plus-circle fs-3"></i>
                    <p>Crea un nuevo tablero</p>
                </div>
            </div>
        </div>
    </div>
    
</div>
</div>

@await Html.PartialAsync("Crear", new tl2_proyecto_2024_nachoNota.ViewModels.TableroVM.CrearTableroViewModel())


@if (TempData["Mensaje"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div class="toast show bg-success" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Éxito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-light">
                @TempData["Mensaje"]
            </div>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>