@model List<tl2_proyecto_2024_nachoNota.ViewModels.TableroVM.ListarTablerosAjenosViewModel>

<div class="container">
    <h1 class="mt-3">Tableros ajenos</h1>
    <div class="my-4">
        <div class="row g-4">
            @if(Model.Count > 0){
                @foreach (var tablero in Model)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3">
                        <div class="card mover mover-hover8">
                            <a asp-action="Listar" asp-controller="Tarea" asp-route-idTablero="@tablero.IdTablero" class="text-decoration-none">
                                <div class="card-body borde-letras" style="background-color: @tablero.Color;">
                                    <h5 class="card-title">@tablero.Titulo</h5>
                                </div>
                            </a>
                            <div class="card-footer d-flex justify-content-end">
                                <i class="bi bi-person-circle fs-4" data-bs-toggle="tooltip" data-bs-placement="left"
                                   data-bs-title="Propietario: @tablero.NombrePropietario"></i>
                            </div>

                        </div>
                    </div>
                }
            } else {
                <p class="ms-4">Aún no existen otros tableros en los que tengas tareas asignadas.</p>
            }

            
        </div>

    </div>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div class="toast show bg-success" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Éxito</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body text-light">
                @TempData["Mensaje"]
            </div>
        </div>
    </div>
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>