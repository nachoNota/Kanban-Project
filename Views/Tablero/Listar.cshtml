@model List<tl2_proyecto_2024_nachoNota.Models.Tablero>


<h1 class="mt-3">Tableros</h1>
<div class="container my-4">
    <div class="row g-4">
        @{var rol = ViewData["RolUsuario"];}
        @foreach (var tablero in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card mover mover-hover8">
                    <div class="card-body borde-letras" style="background-color: @tablero.Color;">
                        <h5 class="card-title">@tablero.Titulo</h5>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <!-- Contenedor para los primeros dos botones alineados a la izquierda -->
                        <div>
                            <!-- boton eliminar -->
                            <button class="btn btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalEliminar-@tablero.Id">
                                <i class="bi bi-trash"></i>
                            </button>

                            <!-- boton modificar -->
                            <button class="btn btn-outline-primary ms-2"
                                    data-bs-toggle="offcanvas"
                                    data-bs-target="#offcanvasRight-@tablero.Id"
                                    aria-controls="offcanvasRight">
                                <i class="bi bi-arrow-repeat"></i>
                            </button>
                        </div>

                        <!-- boton cambiar tablero de usuario-->
                        @if (string.Equals(rol.ToString(), "admin"))
                        {
                            <button class="btn btn-outline-primary ms-auto"
                                    data-bs-toggle="offcanvas"
                                    data-bs-target="#offcanvasRight-@tablero.Id"
                                    aria-controls="offcanvasRight">
                                <i class="bi bi-person-up fs-5"></i>
                            </button>
                        }
                    </div>

                </div>
            </div>


            @await Html.PartialAsync("Eliminar", tablero.Id)
            @await Html.PartialAsync("Modificar", new tl2_proyecto_2024_nachoNota.ViewModels.TableroModificar(tablero))
        }

        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center mover mover-hover8 cursor"
                 data-bs-toggle="offcanvas"
                 data-bs-target="#offcanvasCrear"
                 aria-controls="offcanvasCrear">
                <div class="card-body">
                    <p>¿Nuevas tareas por hacer?</p>
                    <i class="bi bi-plus-circle fs-3"></i>
                    <p>Crea un nuevo tablero</p>
                </div>
            </div>
        </div>
    </div>
    
</div>

@await Html.PartialAsync("Crear", new tl2_proyecto_2024_nachoNota.Models.Tablero())


