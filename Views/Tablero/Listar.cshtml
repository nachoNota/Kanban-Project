@model List<tl2_proyecto_2024_nachoNota.Models.Tablero>


<h1>Tableros</h1>
<div class="container my-4">
    <div class="row g-4">

        @foreach(var tablero in Model){
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card mover mover-hover8">
                    <div class="card-body">
                        <h5 class="card-title">@tablero.Titulo</h5>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <i class="bi bi-trash"></i>
                        </button>
                        <button class="btn btn-outline-primary ms-2">
                            <i class="bi bi-arrow-repeat"></i>
                        </button>
                    </div>
                </div>
            </div>

            @Html.Partial("Eliminar", tablero.Id);

        }

        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-center mover mover-hover8">
                <div class="card-body">
                    <p>¿Nuevas tareas por hacer?</p>
                    <i class="bi bi-plus-circle fs-3"></i>
                    <p>Crea un nuevo tablero</p>
                </div>
            </div>
        </div>
       
    </div>
</div>